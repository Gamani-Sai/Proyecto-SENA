<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Hola</servlet-name>
        <servlet-class>Controlador.Hola</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Listar</servlet-name>
        <servlet-class>Controlador.Listar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ValidarUsuario</servlet-name>
        <servlet-class>Controlador.ValidarUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ParametrosControl</servlet-name>
        <servlet-class>Controlador.ParametrosControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrarControl</servlet-name>
        <servlet-class>Controlador.RegistrarControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Foto</servlet-name>
        <servlet-class>Controlador.Foto</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Hola</servlet-name>
        <url-pattern>/Hola</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Listar</servlet-name>
        <url-pattern>/Listar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValidarUsuario</servlet-name>
        <url-pattern>/ValidarUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ParametrosControl</servlet-name>
        <url-pattern>/ParametrosControl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrarControl</servlet-name>
        <url-pattern>/RegistrarControl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Foto</servlet-name>
        <url-pattern>/Foto</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
